                    android:layout_height="100dp"
                    android:src="@drawable/ic_automobile_1"/>

                <TextView
                    android:id="@+id/txt_menu_name_21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Generic Air Compressor - 12V - 1 Cylinder - Silver/Black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Price"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_price_21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/text_round"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="EGP 246"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/addCartBtn_21"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@color/violet"
                    android:text="Add To Cart"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

