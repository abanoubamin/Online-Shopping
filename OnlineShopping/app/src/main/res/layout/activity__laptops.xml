            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardView_13"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="5dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_product_13"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_laptops_1"/>

                <TextView
                    android:id="@+id/txt_menu_name_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Dell Inspiron 15-7559"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Price"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_price_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/text_round"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="EGP 21999"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/addCartBtn_13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@color/green"
                    android:text="Add To Cart"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

